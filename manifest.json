{
  "manifest_version": 3,
  "name": "Lore Vault: Multi-Agent Edition",
  "version": "1.1",
  "description": "Privacy shield for ChatGPT and Claude. Locks your chat history behind a secure vault.",
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
	  "icons": {
		"128": "icon.png"
		}
    }
  ]
}