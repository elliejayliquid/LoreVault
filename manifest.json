{
  "manifest_version": 3,
  "name": "ChatGPT Lore Vault",
  "version": "1.2",
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
    "icons": {
    "128": "icon.png"
	}
}